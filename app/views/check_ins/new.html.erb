<script>
        initGeo();
        initMap("<%= @destination.address %>");

</script>

<h1>Checking in at <%= @destination.address %></h1>    
<div id="location_text"></div>
<div id="distance_text"></div>

<%= form_tag(check_ins_path, method: "post") do %>
        <%= hidden_field_tag :location%>
        <%= hidden_field_tag :distance%>

        <%= submit_tag "Check in", id: "check_in_button"  %>
<% end %>



<%= link_to 'Back', check_ins_path %>
