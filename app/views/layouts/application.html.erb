<!DOCTYPE html>
<html>
<head>
  <title>Check-in app</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!--the script needed for the reverse geocoding-->
  <% if @is_new_destination %>
    <script>
      if(window.google){
        setupAutocomplete();
      }
      else{
        $.ajax('https://maps.googleapis.com/maps/api/js?key=AIzaSyCeUFPSExQp5oAW7inlirQEjZR5oI4ubSU&libraries=places&callback=setupAutocomplete', {
        crossDomain: true,
        dataType: 'script'
        });
      }
    </script>
  <% end %>
  
  <%= csrf_meta_tags %>
</head>
<body>
  
<%= render "layouts/navbar" %>
<%= render "layouts/errors" %>
<%= yield %>

</body>
</html>
